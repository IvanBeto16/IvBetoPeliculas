@model ML.Usuario
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
	@using(Html.BeginForm("ForgotPassword", "Usuario", FormMethod.Post, new { @enctype = "multipart/form-data" }))
	{
		<div class="container">
			<div class="screen">
				<br />
				<br />
				<br />
				<br />
				<br />
				<br />
				<br />
				<div class="screen__content">
					<form class="login">
						<h3 class="fw-bold" style="color: rgb(20,10,90)">Recuperacion de Contraseña - Movie Project</h3>
						<br />
						<span>Ingrese por favor su correo electrónico para enviarle indicaciones para cambiar su contraseña.</span>
						<br />
						<br />
						<div class="login__field">
							<i class="login__icon fas fa-user"></i>
							<!--<input type="text" class="login__input" placeholder="Email">-->
							@Html.TextBoxFor(model => Model.Email, new { @class = "login__input" , @type = "text" , @placeholder = "Email"})
						</div>
						<br />
						<br />
						<br />
						<button class="button login__submit">
							<span class="button__text">Send Recover Mail</span>
							<i class="button__icon fas fa-chevron-right"></i>
						</button>
					</form>
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<a style="color: white; padding: 25px;" href="@Url.Action("Login","Usuario")">
						<i class="fa-solid fa-angles-left"></i>
						<span>Volver al Login</span>
					</a>
					<br />
					<br />
					<br />
					<div class="social-login">
						<h3>log in via</h3>
						<div class="social-icons">
							<a href="#" class="social-login__icon fab fa-instagram"></a>
							<a href="#" class="social-login__icon"><i class=" fa-brands fa-facebook"></i></a>
							<a href="#" class="social-login__icon fab fa-twitter"></a>
						</div>
					</div>
				</div>
				<div class="screen__background">
					<span class="screen__background__shape screen__background__shape4"></span>
					<span class="screen__background__shape screen__background__shape3"></span>
					<span class="screen__background__shape screen__background__shape2"></span>
					<span class="screen__background__shape screen__background__shape1"></span>
				</div>
			</div>
		</div>
	}
	<br />
	<br />
	<h6 style="color: lightblue; padding: 10px;">2023 - Todos los Derechos Reservados - DIGIS01 - México</h6>
}
