@model Root
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h3 class="text-center fw-bold">Lista de Peliculas</h3>
    <br />
    <br />
    <span>Estas son las peliculas que tenemos a disposición. Podrás encontrar desde peliculas populares retro, anteriores y nuevos estrenos con buena valoración.</span>
    <br />
    <hr />
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="@Url.Action("Peliculas", "Pelicula", new { page = ViewBag.Page -1 })">Anterior</a></li>
            <li class="page-item"><a class="page-link" href="@Url.Action("Peliculas", "Pelicula", new { page = 1 })">1</a></li>
            <li class="page-item"><a class="page-link" href="@Url.Action("Peliculas", "Pelicula", new { page = 2 })">2</a></li>
            <li class="page-item"><a class="page-link" href="@Url.Action("Peliculas", "Pelicula", new { page = 3 })">3</a></li>
            <li class="page-item"><a class="page-link" href="@Url.Action("Peliculas", "Pelicula", new { page = ViewBag.Page + 1 })">Siguiente</a></li>
        </ul>
    </nav>
    <br />
    <div class="row row-cols-lg-2">
        @foreach (Pelicula movie in Model.results)
        {
            <div class="col-lg-6">
                <div class="card mb-3 bg-dark" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@movie.poster_path" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@movie.title</h5>
                                <span>Popularidad: @movie.popularity</span>
                                <hr />
                                <p class="card-text">@movie.overview</p>
                                <p class="card-text"><small class="text-body-secondary">Release date: @movie.release_date</small></p>
                                <button class="btn btn-info"><i class="fa-brands fa-readme"></i> Leer Más</button> <a class="btn btn-danger" href="@Url.Action("Favorites", "Pelicula", new {idPelicula = movie.id})"><i class="fa-solid fa-heart" style="color: #f7f7f8;"></i> Favorites</a> <button class="btn btn-warning" href="#"><i class="fa-solid fa-comments"></i> Calificar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <br />
            </div>
        }
    </div>
}

